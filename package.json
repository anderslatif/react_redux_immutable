{
  "name": "react-ssr-boilerplate",
  "private": true,
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npm run clean && webpack -r esm --config ./config/webpack",
    "dev:client": "webpack-dev-server -r esm --config ./config/webpack/client/watch",
    "dev:server": "wait-on ./build/client/assets-manifest.json && webpack -r esm --config ./config/webpack/server/watch",
    "dev": "npm run clean && run-p dev:*",
    "start": "node -r source-map-support/register ./build/server"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.44",
    "@babel/runtime": "^7.0.0-beta.44",
    "common-tags": "^1.7.2",
    "express-static-gzip": "^0.3.2",
    "immutable": "^3.8.2",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.1",
    "raf": "^3.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "serve-favicon": "^2.5.0",
    "source-map-support": "^0.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-react": "^7.0.0-beta.44",
    "assets-webpack-plugin": "^3.5.1",
    "babel-loader": "^8.0.0-beta.2",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^0.28.11",
    "esm": "^3.0.20",
    "express": "^4.16.3",
    "mini-css-extract-plugin": "^0.4.0",
    "morgan": "^1.9.0",
    "npm-run-all": "^4.1.2",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.4",
    "postcss-reporter": "^5.0.0",
    "rimraf": "^2.6.2",
    "start-server-webpack-plugin": "^2.2.5",
    "style-loader": "^0.21.0",
    "wait-on": "^2.1.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "webpack-node-externals": "^1.7.2"
  },
  "engines": {
    "node": "^9.11.1",
    "npm": "^5.6.0"
  }
}
